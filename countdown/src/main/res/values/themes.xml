<resources>
    <!-- Base application theme. -->
    <style name="Theme.Countdown" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@android:color/system_accent1_300</item>
        <item name="colorPrimary">@android:color/system_accent1_300</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Countdown.AppWidgetContainerParent" parent="Theme.Material3.DynamicColors.DayNight">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">@android:dimen/system_app_widget_background_radius</item>
        <item name="appWidgetInnerRadius">@android:dimen/system_app_widget_inner_radius</item>
    </style>

    <style name="Theme.Countdown.AppWidgetContainer" parent="Theme.Countdown.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>
</resources>